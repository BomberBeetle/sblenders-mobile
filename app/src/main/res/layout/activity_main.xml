<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabsans"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toTopOf="@+id/viewPeiger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TabItem
            android:id="@+id/silvia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bunda" />

        <android.support.design.widget.TabItem
            android:id="@+id/roberto_carlos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item 2" />

        <android.support.design.widget.TabItem
            android:id="@+id/nego_ney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INSERIR TEXTO AQUI" />
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPeiger"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabsans"
        app:layout_constraintVertical_bias="0.462">

        <fragment
            android:id="@+id/fragment"
            android:name="teste.br.sblendersApp.TabPedidos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/tab_pedido" />

        <fragment
            android:id="@+id/fragment2"
            android:name="teste.br.sblendersApp.TabPedidos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/tab_pedido" />

        <fragment
            android:id="@+id/fragment3"
            android:name="teste.br.sblendersApp.TabPedidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout="@layout/tab_pedido" />
    </android.support.v4.view.ViewPager>
</android.support.constraint.ConstraintLayout>